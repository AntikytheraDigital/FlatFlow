datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Flat {
  id        Int        @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime   @updatedAt
  UserFlats UserFlat[]
}

model UserFlat {
  userId String @id
  flatId Int
  Flat   Flat   @relation(fields: [flatId], references: [id])

  @@index([flatId])
}